<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ProgressBar android:id="@+id/progressBar" android:padding="1dp" android:layout_width="match_parent" android:layout_height="6dp" android:max="100" android:progress="50" android:progressDrawable="@drawable/progressline_progress_drawable" style="?android:attr/progressBarStyleHorizontal"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="12sp" android:textColor="@color/textSecondary" android:gravity="center" android:id="@+id/textMinPercent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/textMinPercent" android:lines="1" android:fontFamily="@font/regular" android:layout_alignParentStart="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/textSecondary" android:gravity="center" android:id="@+id/textMaxPercent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/textMaxPercent" android:lines="1" android:fontFamily="@font/regular" android:layout_alignParentEnd="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/progress_text" android:gravity="center" android:id="@+id/textPercent" android:layout_width="36dp" android:layout_height="wrap_content" android:lines="1" android:fontFamily="@font/regular"/>
    </RelativeLayout>
</LinearLayout>
