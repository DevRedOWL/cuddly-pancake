<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/colorH" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/top_bar" android:background="@color/colorF" android:layout_width="match_parent" android:layout_height="60dp">
        <ImageView android:id="@+id/back" android:background="@drawable/toolbar_button" android:padding="18dp" android:layout_width="0dp" android:layout_height="match_parent" android:src="@drawable/back" android:layout_weight="0.2" android:contentDescription="@string/content_description_back"/>
        <TextView android:ellipsize="end" android:layout_gravity="center" android:id="@+id/contact_name" android:padding="15dp" android:layout_width="0dp" android:layout_height="match_parent" android:maxLines="1" android:layout_weight="0.4" style="@style/font6"/>
        <ImageView android:id="@+id/start_call" android:background="@drawable/toolbar_button" android:padding="15dp" android:layout_width="0dp" android:layout_height="match_parent" android:src="@drawable/call_alt_start" android:layout_weight="0.2" android:contentDescription="@string/content_description_call"/>
        <ImageView android:id="@+id/back_to_call" android:background="@drawable/toolbar_button" android:padding="15dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:src="@drawable/call_back" android:layout_weight="0.2" android:contentDescription="@string/content_description_back_call"/>
        <ImageView android:id="@+id/edit" android:background="@drawable/toolbar_button" android:padding="15dp" android:layout_width="0dp" android:layout_height="match_parent" android:src="@drawable/edit_list_button" android:layout_weight="0.2" android:contentDescription="@string/content_description_edit_list"/>
    </LinearLayout>
    <include layout="@layout/edit_list"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/footer" android:background="@color/colorF" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="horizontal" android:id="@+id/message_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/send_picture" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/chat_send_file" android:layout_weight="0.1" android:contentDescription="@string/content_description_send_file"/>
            <EditText android:textColor="@color/colorB" android:layout_gravity="center_vertical" android:id="@+id/message" android:background="@drawable/resizable_textfield" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:maxLines="6" android:layout_weight="1" android:inputType="none|text|textMultiLine|textShortMessage" android:imeOptions="flagNoExtractUi" android:contentDescription="@string/content_description_message" android:textCursorDrawable="@null"/>
            <ImageView android:id="@+id/send_message" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/chat_send_message" android:layout_weight="0.1" android:contentDescription="@string/content_description_send_message"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:id="@+id/remote_composing" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/remote_composing" android:layout_above="@+id/footer" style="@style/font11"/>
    <ListView android:id="@+id/chat_message_list" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="10dp" android:stackFromBottom="true" android:transcriptMode="normal" android:cacheColorHint="@color/transparent" android:divider="@android:color/transparent" android:dividerHeight="10dp" android:choiceMode="multipleChoice" android:layout_above="@+id/remote_composing" android:layout_below="@+id/top_bar"/>
    <EditText android:textColor="@android:color/black" android:id="@+id/search_contact_field" android:background="@drawable/resizable_textfield" android:visibility="gone" android:layout_width="match_parent" android:layout_height="40dp" android:layout_margin="5dp" android:layout_below="@+id/top_bar" android:inputType="textPersonName" android:contentDescription="@string/content_description_search" android:textCursorDrawable="@null"/>
    <ListView android:id="@+id/result_contacts" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@color/colorE" android:dividerHeight="1dp" android:layout_above="@+id/footer" android:layout_below="@+id/search_contact_field" android:fastScrollEnabled="true" android:fastScrollAlwaysVisible="true"/>
</RelativeLayout>
