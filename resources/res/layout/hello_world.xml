<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <EditText android:id="@+id/AddressId" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="sip:[user@]host[:port]" android:hint="sip:user@host:port" android:layout_weight="1"/>
        <Button android:id="@+id/CallButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Call"/>
    </LinearLayout>
    <EditText android:id="@+id/MyAddressId" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:hint="enter my sip identity (sip:[user@]host)"/>
    <EditText android:id="@+id/Password" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="my password"/>
    <TextView android:id="@+id/OutputText" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Debug" android:layout_weight="1"/>
    <Button android:id="@+id/ButtonStop" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="STOP"/>
</LinearLayout>
