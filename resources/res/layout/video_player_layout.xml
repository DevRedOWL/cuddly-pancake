<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#c1000000" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageButton android:id="@+id/backward" style="@style/MediaButton.Rew"/>
        <ImageButton android:id="@+id/pause" style="@style/MediaButton.Play"/>
        <ImageButton android:id="@+id/forward" style="@style/MediaButton.Ffwd"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textColor="#fff" android:layout_gravity="center_horizontal" android:id="@+id/current_time" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <SeekBar android:id="@+id/media_controller_progress" android:layout_width="0dp" android:layout_height="32dp" android:layout_weight="1" style="?android:attr/progressBarStyleHorizontal"/>
        <TextView android:textSize="14sp" android:textColor="#fff" android:layout_gravity="center_horizontal" android:id="@+id/rest_time" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ImageButton android:layout_gravity="top" android:id="@+id/full_screen" android:background="@android:color/transparent" android:paddingLeft="10dp" android:paddingTop="4dp" android:paddingRight="4dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
