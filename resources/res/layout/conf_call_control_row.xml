<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/colorH" android:padding="2dp" android:layout_width="match_parent" android:layout_height="70dp" android:layout_margin="2dp" android:divider="@color/colorE" android:dividerHeight="1dp">
    <ImageView android:id="@+id/contactPicture" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/avatar"/>
    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/contactNameOrNumber" android:paddingLeft="20dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" style="@style/font6"/>
        <Chronometer android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/call_timer" android:paddingLeft="10dp" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/font2"/>
    </LinearLayout>
    <ImageView android:gravity="center_vertical" android:id="@+id/quitConference" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/conference_exit_default" android:scaleType="fitCenter" android:adjustViewBounds="true" android:contentDescription="@string/content_description_exit_conference"/>
</LinearLayout>
