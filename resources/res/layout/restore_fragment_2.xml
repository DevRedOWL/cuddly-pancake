<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:id="@+id/scroll_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/btn_restore">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_edit" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="60dp" android:layout_above="@+id/btn_restore">
            <EditText android:id="@+id/et_restore" android:background="@drawable/selector_bg_edit_text_login" android:paddingLeft="8dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="40dp" android:layout_marginTop="24dp" android:layout_marginRight="40dp" android:hint="@string/hint_restore" android:singleLine="true" android:imeOptions="actionNext" android:nextFocusForward="@+id/btn_restore" android:textCursorDrawable="@drawable/color_cursor" android:layout_marginStart="40dp" android:layout_marginEnd="40dp"/>
            <EditText android:id="@+id/et_restore_code" android:background="@drawable/selector_bg_edit_text_login" android:paddingLeft="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="40dp" android:layout_marginTop="16dp" android:layout_marginRight="40dp" android:hint="@string/hint_restore_code" android:singleLine="true" android:imeOptions="actionNext" android:nextFocusForward="@+id/btn_restore" android:textCursorDrawable="@drawable/color_cursor" android:layout_marginStart="40dp" android:layout_marginEnd="40dp"/>
            <requestFocus/>
        </LinearLayout>
    </ScrollView>
    <Button android:enabled="false" android:textColor="@color/textPrimary" android:id="@+id/btn_restore" android:background="@drawable/bg_button_selector" android:layout_width="160dp" android:layout_height="48dp" android:layout_marginTop="16dp" android:layout_marginBottom="24dp" android:text="@string/button_restore" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <ImageView android:id="@+id/iv_back" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginLeft="8dp" android:layout_marginTop="16dp" android:tint="@color/textPrimary" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ic_svg_arrow_back"/>
    <ProgressBar android:id="@+id/pb" android:visibility="gone" android:layout_width="50dp" android:layout_height="50dp" android:layout_centerInParent="true"/>
</RelativeLayout>
