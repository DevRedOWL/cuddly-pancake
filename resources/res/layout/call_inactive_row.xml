<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/colorA" android:padding="5dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="2dp" android:alpha="0.5">
    <ImageView android:id="@+id/contact_picture" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/avatar"/>
    <TextView android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/contact_name" android:paddingLeft="20dp" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="1" android:layout_weight="1" style="@style/font14"/>
    <Chronometer android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/call_timer" android:paddingLeft="10dp" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/font16"/>
    <ImageView android:gravity="center_vertical" android:id="@+id/call_pause" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/pause_small_over_selected" android:contentDescription="@string/content_description_pause"/>
</LinearLayout>
