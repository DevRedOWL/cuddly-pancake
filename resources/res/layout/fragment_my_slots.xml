        <TextView android:textSize="18sp" android:textColor="@color/brandTextPrimary" android:gravity="center" android:id="@+id/tvMessageDescription" android:padding="@dimen/largePadding" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/parkingNoRentsDescription" android:fontFamily="@font/regular"/>
    </LinearLayout>
    <ProgressBar android:id="@+id/pbLoading" android:visibility="gone" android:layout_width="72dp" android:layout_height="72dp" android:indeterminate="true" android:layout_centerInParent="true"/>
</RelativeLayout>
