<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#00000000" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/barLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/pickerLayout">
        <TextView android:id="@+id/cancel" android:padding="9dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
        <TextView android:id="@+id/title" android:padding="9dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        <TextView android:id="@+id/confirm" android:padding="9dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/pickerLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <com.beefe.picker.view.PickerViewLinkage android:id="@+id/pickerViewLinkage" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <com.beefe.picker.view.PickerViewAlone android:id="@+id/pickerViewAlone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>
