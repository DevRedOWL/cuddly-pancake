<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_enabled="true" android:state_pressed="true">
        <set>
            <objectAnimator android:duration="300" android:valueTo="16dp" android:valueType="floatType" android:propertyName="elevation"/>
        </set>
    </item>
    <item android:state_enabled="true">
        <set>
            <objectAnimator android:duration="300" android:valueTo="8dp" android:valueType="floatType" android:propertyName="elevation"/>
        </set>
    </item>
</selector>
