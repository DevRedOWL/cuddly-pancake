<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <layer-list>
            <item android:left="2dp" android:bottom="2dp">
                <shape>
                    <gradient android:startColor="#f1f1f1" android:endColor="#e2e2e2" android:angle="270"/>
                    <stroke android:width="1dp" android:color="#d9d9d9"/>
                    <corners android:radius="4dp"/>
                    <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
