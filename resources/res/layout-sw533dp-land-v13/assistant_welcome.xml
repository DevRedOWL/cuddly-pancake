<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:padding="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/welcome" android:textAllCaps="true" style="@style/font6"/>
        <TextView android:layout_gravity="center" android:paddingTop="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/assistant_welcome_desc" style="@style/font11"/>
        <TableLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp">
            <TableRow android:gravity="center" android:layout_margin="10dp" android:layout_weight="1">
                <Button android:id="@+id/create_account" android:background="@drawable/assistant_button" android:layout_width="0dp" android:layout_height="40dp" android:text="@string/assistant_create_account" android:layout_weight="1" android:contentDescription="@string/assistant_create_account" style="@style/font8"/>
                <Button android:id="@+id/login_linphone" android:background="@drawable/assistant_button" android:layout_width="0dp" android:layout_height="40dp" android:layout_marginLeft="30dp" android:text="@string/assistant_login_linphone" android:layout_weight="1" android:contentDescription="@string/assistant_login_linphone" style="@style/font8"/>
            </TableRow>
            <TableRow android:gravity="center" android:layout_margin="10dp" android:layout_weight="1">
                <Button android:id="@+id/login_generic" android:background="@drawable/assistant_button" android:layout_width="0dp" android:layout_height="40dp" android:text="@string/assistant_login_generic" android:layout_weight="1" android:contentDescription="@string/assistant_login_generic" style="@style/font8"/>
                <Button android:id="@+id/remote_provisioning" android:background="@drawable/assistant_button" android:layout_width="0dp" android:layout_height="40dp" android:layout_marginLeft="30dp" android:text="@string/assistant_remote_provisioning" android:layout_weight="1" android:contentDescription="@string/assistant_remote_provisioning" style="@style/font8"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>
